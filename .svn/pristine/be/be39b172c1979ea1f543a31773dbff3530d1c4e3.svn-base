int asp = 2;  // aspect ratio


/*
* project()
* ------
* Sets the projection
*/
void project()
{
	glMatrixMode(GL_PROJECTION);
	glLoadIdentity();

	// perspective
	gluPerspective(fov, asp, 0.0, 10 * dim);

	// orthoganal projection
	//glOrtho(-dim*asp, +dim*asp, -dim, +dim, 0, 10*dim);

	glMatrixMode(GL_MODELVIEW);
	glLoadIdentity();
}

